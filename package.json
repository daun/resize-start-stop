{
  "name": "resize-start-stop",
  "description": "Debounced resizestart and resizestop events on the window",
  "version": "1.1.0",
  "author": "Philipp Daun <daun@daun.ltd>)",
  "license": "MIT",
  "source": "src/index.js",
  "main": "dist/resize-start-stop.js",
  "module": "dist/resize-start-stop.es.js",
  "esmodule": "dist/resize-start-stop.modern.js",
  "unpkg": "dist/resize-start-stop.umd.js",
  "scripts": {
    "test": "npm run lint && npm run cover",
    "test:only": "mocha --require esm --require jsdom-global/register test/*.js",
    "test:watch": "npm test -- --watch",
    "cover": "nyc --check-coverage npm run test:only",
    "cover:lcov": "nyc --reporter=lcov npm run test:only",
    "cover:codecov": "npm run cover:lcov && cat ./coverage/lcov.info | codecov",
    "lint": "eslint src test",
    "clean": "rimraf dist",
    "bundle": "microbundle && microbundle -f umd --external none",
    "build": "npm run clean && npm run bundle",
    "prepublish": "npm run clean && npm run lint && npm run test && npm run build"
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/daun/resize-start-stop"
  },
  "keywords": [
    "javascript",
    "events",
    "window",
    "resize",
    "resizestart",
    "resizestop",
    "debounce"
  ],
  "bugs": {
    "url": "https://github.com/daun/resize-start-stop/issues"
  },
  "homepage": "https://github.com/daun/resize-start-stop",
  "devDependencies": {
    "chai": "^4.1.2",
    "codecov": "^3.7.2",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "esm": "^3.2.25",
    "jsdom": "16.2.2",
    "jsdom-global": "3.0.2",
    "microbundle": "^0.12.1",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "debounce": "^1.2.0"
  }
}
